

-- Check basic records.
--   We read a quote file, compute daily trade value,
--   then sort days by value traded.
format
 =      { symbol : Text         = 'Text
        , date   : Date         = 'YYYY-MM-DD
        , open   : Decimal      = 'Decimal
        , close  : Decimal      = 'Decimal
        , high   : Decimal      = 'Decimal
        , low    : Decimal      = 'Decimal
        , mid    : Decimal      = 'Decimal
        , volume : Int          = 'Int
        , stamp  : Date         = 'YYYY-MM-DD }

main
 = concat
        [ read format "test/data/tsv/quotes/ANZ.tsv"
        , read format "test/data/tsv/quotes/CBA.tsv"]

 & on /row     
        $ group 'symbol

 & on /symbol/row
        $ map-keys 
        ( Î»x -> { date  : Date    = x.date
                , high  : Decimal = x.high
                , low   : Decimal = x.low
                , mid   : Decimal = div (x.high + x.low) 2
                , value : Decimal = x.volume * x.close })

 & on /symbol/row
        $ sortby-field 'value
        @ sample 10

